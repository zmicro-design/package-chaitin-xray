#!/bin/bash

help() {
  echo "Usage:"
  echo "  zmicro chaitin-xray <args ...>"
  echo ""

  chaitin-xray --help
}

version() {
  chaitin-xray --version
}

core() {
  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    chaitin-xray "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
